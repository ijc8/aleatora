<GraphLabel>:
	size: (100, 50)
	size_hint: (None, None)

<GraphTitleLabel>:
	height: 30
	size_hint: (1, None)
	text_size: self.size
	halign: 'left'
	valign: 'middle'
	padding_x: 0

<GraphLayout>:
	height: self.minimum_height
	width: self.minimum_width
	size_hint: (None, None)
	spacing: 10

<GraphBorderLayout>:
	padding: (10, 0, 10, 10)
	spacing: 0

<GraphLabel, GraphBorderLayout>:
    canvas.before:
		Color:
			rgba: (1,1,1,0.7)
		Line:
			width: 1.1
			rectangle: self.x, self.y, self.width, self.height